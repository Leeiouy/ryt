<!--pages/passRecoverySet/index.wxml-->
<view class='pass-recovery-box'>
  <form bindsubmit="formsubmit">
    <view class='pass-recovery ali-c'>
      <label>原密码</label>
      <input type='number' password name="original" maxlength='15' placeholder='请输入原密码' class='flex1' ></input>
    </view>
    <view class='pass-recovery ali-c'>
      <label>密码</label>
      <input type='number' password name="password" maxlength='15' placeholder='请重新设置密码' class='flex1' ></input>
    </view>
    <view class='pass-recovery ali-c'>
      <label>确认密码</label>
      <input type='number' password name="passwordAgin" maxlength='15' placeholder='请再次确认密码' class='flex1'></input>
    </view>

    <view class='recovery-submit'>
      <button class='weui-btn' form-type='submit'>确定</button>
    </view>
  </form>
</view>

 