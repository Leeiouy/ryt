/*pages/template/product*/
.product{
  width: 370rpx;
  padding: 16rpx;
  background: #fff;
}
.product .product-img{
  width: 338rpx;
  height: 338rpx;
}
.product .product-name{
  height: 70rpx;
  line-height: 35rpx;
  margin: 6rpx 0;
}
.product .product-prices{
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color:#999;
  height: 34rpx;
  line-height: 34rpx;
  overflow: hidden;
}
.product .product-prices .info-left,
.product .product-prices .info-right{
  width: auto;
} 
.product .product-prices .info-left .new{
  color:#f13130;
  font-weight: bold;
  font-size: 26rpx;
}
.product .product-prices .info-left .old{
  color:#999;
  text-decoration: line-through;
  margin-left: 4rpx;
}

.loading{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.loading .load-box{
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  border-left:2px solid #f13130;
  border-top:2px solid #f13130;  
  animation: loading 0.8s linear infinite; 
}
@keyframes loading{
  from{
    transform: rotate(0);
  }
  30%{
    transform: rotate(180deg);
  }
  to{
    transform: rotate(360deg);
  }
}
