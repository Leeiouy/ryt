/* pages/health/proxyVerify/proxyVerify.wxss */

.my-container {
  width: 100vw;
  min-height: 100vh;
  background: #F5F5F5;
  padding-top: 1px;
  padding-top: 88rpx;
}

.tabbar {
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  position: fixed;
  top: 0;
  left: 0;
}

.tabbar .item {
  height: 100%;
  width: 33%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 28rpx;
}

.tabbar .item.on {
  color: #FF4101;
}

.tabbar .item .block {
  background: #fff;
  height: 4rpx;
  width: 100rpx;
  position: absolute;
  bottom: 0;
}

.tabbar .item.on .block {
  background-color: #FF4000;
}

.list {
  width: 100%;
  padding: 20rpx 30rpx;
}

.list .item {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-bottom: 18rpx;
}

.list .item .line {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}

.list .item .line view {
  flex: 1;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #343434;
}

.list .item .line .person {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.list .item .line .person image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 6rpx;
  border-radius: 50%;

}

.list .item .btns {
  height: 80rpx;
  width: 100%;
  display: flex;
  border-top: 1px solid #E1E1E1;
}

.list .item .btn {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.list .item .agree {
  color: #34B26D;
  border-right: 1px solid #E1E1E1;
}

.list .item .refuse {
  color: #F8622F;
}



.empty {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.empty image {
  height: 310rpx;
  width: 417rpx;
  margin-bottom: 40rpx;
}
