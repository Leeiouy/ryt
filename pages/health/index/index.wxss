/* pages/health/index/index.wxss */
.my-container {
  width: 100vw;
  min-height: 100vh;
  background-color: #F5F5F5;
}


swiper {
  height: 300rpx;
  width: 750rpx;
  margin-bottom: 30rpx;
}





/*公告*/

.index-notice {
  width: 100%;
  height: 88rpx;
  /* margin-top: 22%; */
  padding: 0 30rpx;
  background: #fff;
  display: flex;
}

.index-notice-ico {
  width: 140rpx;
  height: 100%;
}

.index-notice-ico image {
  width: 113rpx;
  height: 28rpx;
}

.index-notice-swiper {
  flex: 1;
  height: 88rpx;
  overflow: hidden;
}

.index-notice-swiper .item-box {
  width: 100%;
}

.index-notice-swiper .item-box.to-top {
  margin-top: -88rpx;
  transition: all 0.3s linear;
}

.index-notice-swiper .item-box .item {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  align-items: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #666;
}

/*菜单导航*/

.index-nav {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}

.index-nav .nav-item image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 10rpx 10rpx;
}

.index-nav .nav-item text {
  font-size: 24rpx;
}

/* 限时秒杀 */

.limited {
  margin-top: 20rpx;
  width: 100%;
}

.limitGoods {
  margin-bottom: 20rpx;
}

.item-limited {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 25rpx 20rpx 25rpx;
}

.today-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 1rpx 20rpx 20rpx 25rpx;
}

.left {
  width: 133rpx;
  height: 42rpx;
}

.right text {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.time {
  margin-left: 5rpx;
}

.time-box {
  width: 46rpx;
  height: 38rpx;
  background: rgba(67, 64, 81, 1);
  border-radius: 5rpx;
  color: #fff;
  text-align: center;
  line-height: 38rpx;
}
.limit{
  margin-bottom: -8rpx; 
  padding-top: 20rpx;
  align-items: center;
}
.time text {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(67, 64, 81, 1);
  margin: 0 5rpx;
}

.limited-goods {
  margin-top: 29rpx;
  height: 332rpx;
  width: 100%;
  position: relative;
  overflow: hidden;
}
.limited-goods .tips{
  width: 210rpx;
  height: 210rpx;
  position: absolute;
  right: -60rpx;
  top: -60rpx;
}

.limited-goods  image {
  border-radius: 20rpx;
}

.goods-name {
  margin-top: 27rpx;
  margin-right: 15rpx;
  font-size: 28rpx;
  font-weight: 570;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  text-overflow: ellipsis;
}

.li-prices {
  display: flex;
  margin-top: 21rpx;
}

.li-price text:nth-child(1) {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  margin-left: 9rpx;
}

.li-price text:nth-child(2) {
  font-size: 30rpx;
  color: rgba(228, 89, 42, 1);
}
.li-left{
  width: 100%;
}
.li-right {
  flex-shrink: 0;
  width: 130rpx;
  height: 52rpx;
  margin-left: auto;
  background: rgba(230, 230, 230, 1);
  border-radius: 5rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 52rpx;
  text-align: center;
}

.li-on {
  background: rgba(249, 86, 31, 1);
  color: rgba(255, 255, 255, 1);
}

.li-done {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.heads {
  margin-left: 9rpx;
}

.head {
  margin-left: -20rpx;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background-color: rgba(226, 226, 226, 1);
  border: 1.5rpx solid #fff;
}

.head image {
  border-radius: 50%;
}

.nums {
  color: #999999;
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 20rpx;
  margin-left: 20rpx
}


.limited-bottom {
  margin-bottom: 15rpx;
}

.user-support {
  padding: 16rpx;
  text-align: center;
  color: #888;
}
.li-yi{
  font-size: 24rpx;
  font-weight: 400;
  margin-left: auto;
}

/*为空提示*/
.shopcart-none{
  overflow: hidden;
}
.shopcart-none .none-ico{
  display: block;
  width: 495rpx;
  height: 335rpx;
  margin: 250rpx auto 44rpx;
}
.shopcart-none .none-tip{
  color:#888;
  text-align: center;
}
.shopcart-none .none-btn{
  display: block;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #fd6732;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 76rpx;
  margin: 44rpx auto;
  color: #fd6732;
}

.goods-title text {
  color: #1EAB22;
}