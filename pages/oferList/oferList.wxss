/* 限时秒杀 */
page{
  background-color: #f5f5f5;
}
.banner{
  height: 375rpx;
}
.limited {
  margin-top: 20rpx;
  width: 100%;
}

.limitGoods {
  margin-bottom: 20rpx;
}

.item-limited {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 25rpx 20rpx 25rpx;
}

.today-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 1rpx 20rpx 20rpx 25rpx;
}

.left {
  width: 137rpx;
  height: 49rpx;
}

.right text {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.time {
  margin-left: 5rpx;
}

.time-box {
  width: 46rpx;
  height: 38rpx;
  background: rgba(67, 64, 81, 1);
  border-radius: 5rpx;
  color: #fff;
  text-align: center;
  line-height: 38rpx;
}

.time text {
  font-size: 42rpx;
  font-weight: 400;
  color: rgba(67, 64, 81, 1);
  margin: 0 5rpx;
}

.limited-goods {
  margin-top: 29rpx;
  height: 332rpx;
  width: 100%;
  position: relative;
  overflow: hidden;
}
.limited-goods .tips{
  width: 210rpx;
  height: 210rpx;
  position: absolute;
  right: -60rpx;
  top: -60rpx;
}
.limited-goods  image {
  border-radius: 20rpx;
}

.goods-name {
  margin-top: 27rpx;
  margin-right: 15rpx;
  font-size: 28rpx;
  font-weight: 570;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  text-overflow: ellipsis;
}

.li-prices {
  display: flex;
  margin-top: 21rpx;
}

.li-price text:nth-child(1) {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  margin-left: 9rpx;
}

.li-price text:nth-child(2) {
  font-size: 30rpx;
  color: rgba(228, 89, 42, 1);
}

.li-right {
  flex-shrink: 0;
  width: 130rpx;
  height: 52rpx;
  margin-left: auto;
  background: rgba(230, 230, 230, 1);
  border-radius: 5rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 52rpx;
  text-align: center;
}

.li-on {
  background: rgba(249, 86, 31, 1);
  color: rgba(255, 255, 255, 1);
}

.li-done {
  margin-left: 10rpx;
}

.heads {
  margin-left: 9rpx;
}

.head {
  margin-left: -14rpx;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background-color: rgba(226, 226, 226, 1);
  border: 1.5rpx solid #fff;
}

.head image {
  border-radius: 50%;
}

.nums {
  color: #999999;
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 20rpx;
  margin-left: 20rpx;
}