/* 爆款推荐 */

.limited-top {
  padding: 20rpx 0;
}

.sub-title {
  display: flex;
  flex-flow: row;
  align-items: center;
  padding: 0 25rpx;
}
.sub-title image{
  width: 40rpx;
  height: 25rpx;
  margin: 0 6rpx;
}

.line {
  width: 6rpx;
  height: 36rpx;
  background: rgba(228, 89, 42, 1);
}
.sub-title .more{
  line-height: 1;
  font-size: 26rpx;
  color: rgba(249, 86, 31, 1);
  margin-left: auto;
  display: flex;
  align-items: center;
}
.sub-title .more::after{
  content: '';
  width: 14rpx;
  height: 14rpx;
  border: 1px solid transparent;
  border-top-color: rgba(249, 86, 31, 1);
  border-right-color: rgba(249, 86, 31, 1);
  transform: rotate(45deg);
}
.sub-title text {
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

