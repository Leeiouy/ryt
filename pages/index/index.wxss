/*轮播*/

.swipe-box {
  position: absolute;
  width: 92%;
  height: 375rpx;
  z-index: 99;
  bottom: 20rpx;
  left: 30rpx;
}

.swipe-box swiper {
  width: 100%;
  height: 100%;
}

.slide-image {
  border-radius: 5rpx;
}

/*公告*/

.index-notice {
  width: 100%;
  height: 88rpx;
  /* margin-top: 22%; */
  padding: 0 30rpx;
  background: #fff;
  display: flex;
}

.index-notice-ico {
  width: 140rpx;
  height: 100%;
}

.index-notice-ico image {
  width: 113rpx;
  height: 28rpx;
}

.index-notice-swiper {
  flex: 1;
  height: 88rpx;
  overflow: hidden;
}

.index-notice-swiper .item-box {
  width: 100%;
}

.index-notice-swiper .item-box.to-top {
  margin-top: -88rpx;
  transition: all 0.3s linear;
}

.index-notice-swiper .item-box .item {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  align-items: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #666;
}

/*菜单导航*/

.index-nav {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}

.index-nav .nav-item image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 10rpx 10rpx;
}

.index-nav .nav-item text {
  font-size: 24rpx;
}

/* 限时秒杀 */

.limited {
  margin-top: 20rpx;
  width: 100%;
}

.limitGoods {
  margin-bottom: 20rpx;
}

.item-limited {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 25rpx 20rpx 25rpx;
}

.today-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 1rpx 20rpx 20rpx 25rpx;
}

.left {
  width: 133rpx;
  height: 42rpx;
}

.right text {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.time {
