page {
  background-color: #f5f5f5;
}

.tabs {
  width: 100%;
  height:500rpx;
  display: flex;
  /* padding: 0 40rpx; */
  border-bottom: 1rpx solid #dcdcdc;
  background-color: #fdfdfd;
  box-shadow: 2rpx 2rpx 0rpx 0rpx rgba(233, 233, 233, 0.86);
  justify-content: space-around;
  background: linear-gradient(23deg, rgba(253, 129, 52, 1), rgba(254, 200, 75, 1));
  background: url('https://riyuetaoguoji.com/images/newgood.png');
  background-size: cover;
}

.tab {
  display: flex;
  width: 25%;
  text-align: center;
  margin-top: 430rpx;
  opacity: 0.6;
}
.tab:after{
  content: "";
  width: 4rpx;
  height: 70rpx;
  /* background-color: #fff; */
  background-color: rgba(247, 246, 246,0.5);
}
.tab .text {
  width: 100%;
  height: 100%;
  background-color: #FEA470;
  line-height: 78rpx;
  color: black;
}

.active .text {
  color: #fff;
  width: 100%;
  height: 100%;
  background-color: #FD8D5B;
}

.limited {
  margin-top: 20rpx;
  width: 100%;
  padding: 29rpx 31rpx 23rpx 29rpx;
  background-color: #fff;
}

.left {
  width: 137rpx;
  height: 49rpx;
}

.right text {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.time {
  margin-left: 5rpx;
}

.time-box {
  width: 46rpx;
  height: 38rpx;
  background: rgba(67, 64, 81, 1);
  border-radius: 5rpx;
  color: #fff;
  text-align: center;
  line-height: 38rpx;
}

.time text {
  font-size: 42rpx;
  font-weight: 400;
  color: rgba(67, 64, 81, 1);
  margin: 0 5rpx;
}

.limited-goods {
  height: 332rpx;
}
.limited-goods .sold{
  width: 692rpx;
  height: 332rpx;
  position: absolute;
  border-radius: 20rpx;
}
.limited-goods .sold-out{
  width: 692rpx;
  height: 332rpx;
  position: relative;
  z-index: 9999;
}
.goods-name {
  margin-top: 27rpx;
  width: 670rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  text-overflow: ellipsis;
}

.li-prices {
  margin-top: 21rpx;
  display: flex;
}

.li-price {
  margin-left: 5rpx;
}

.li-price text:nth-child(1) {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
}

.li-price text:nth-child(2) {
  font-size: 30rpx;
  color: rgba(228, 89, 42, 1);
}

