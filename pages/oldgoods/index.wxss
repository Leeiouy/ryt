.li-right {
  flex-shrink: 0;
  width: 130rpx;
  height: 52rpx;
  margin-left: auto;
  background: rgba(230, 230, 230, 1);
  border-radius: 5rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 52rpx;
  text-align: center;
}

.li-on {
  background: rgba(249, 86, 31, 1);
  color: rgba(255, 255, 255, 1);
}

.li-done {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.heads {
  margin-left: 9rpx;
}

.head {
  margin-left: -20rpx;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background-color: rgba(226, 226, 226, 1);
  border: 1.5rpx solid #fff;
}

.head image {
  border-radius: 50%;
}

.nums {
  color: #999999;
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 20rpx;
  margin-left: 20rpx
}

