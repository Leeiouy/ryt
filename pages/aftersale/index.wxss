.sub-reply {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  padding: 18rpx 0;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx -1rpx 5rpx 0px rgba(192, 184, 183, 0.42);
  margin-top: 105rpx;
}
.sub-bottom{
  padding-bottom: 20rpx;
}
.sub-btn {
  width: 95%;
  height: 84rpx;
  background: rgba(228, 89, 42, 1);
  border-radius: 42rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 84rpx;
  text-align: center;
  margin: 0 auto;
}

/*模态框*/

.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  /* padding: 30rpx; */
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

/*动画前初始位置*/

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.coupon-title {
  width: 40%;
  display: flex;
  justify-content: center;
  margin: 20rpx auto;
}

.cou-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #E6E6E6;
  margin: 0 30rpx;
}

.cou-select image {
  width: 50rpx;
  height: 50rpx;
}

.reason-items {
  padding-bottom: 98rpx;
  z-index: 999;
}

.close {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 98rpx;
  background: rgba(228, 89, 42, 1);
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 98rpx;
  text-align: center;
}
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #E4592A;
}
radio .wx-radio-input.wx-radio-input-checked::before {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;     /* 圆角 */
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;       /* 勾大小 */
    color: #fff;			/* 白色勾  */
    background: #E4592A;
    border:none;
    transform: translate(-50%, -50%) scale(1);
}