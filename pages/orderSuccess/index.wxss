/* pages/orderSuccess/index.wxss */

.order {
  width: 60%;
  margin: 150rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order image {
  width: 417rpx;
  height: 310rpx;
  margin-bottom: 30rpx;
}

.ordertext {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-top: 15rpx;
}

.ordertext text:nth-child(2) {
  color: #e4592a;
}
.toOrder{
  width: 400rpx;
  height: 80rpx;
  margin: 40rpx auto 0;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #e4592a;
  border-radius: 40rpx;
}
