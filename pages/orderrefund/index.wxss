/* pages/orderrefund/index.wxss */

page {
  background-color: #f5f5f5;
}

.sates {
  padding: 34rpx 28rpx;
  background-color: #e4592a;
  color: #fff;
  font-size: 32rpx;
}

.address {
  width: 100%;
  background-color: #fff;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  position: relative;
  margin-top: 20rpx;
}

.address-top {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx 0 84rpx;
}

.address-top text {
  font-size: 30rpx;
  font-stretch: normal;
  color: #333;
}

.add-address {
  display: flex;
  padding: 0 30rpx;
}

.add-address text {
  font-size: 30rpx;
  color: #444;
  line-height: normal;
}

.location {
  width:40rpx;
  height: 37rpx;
  margin-right: 24rpx;
  margin-top: 20rpx;
}

.arrow {
  width: 12rpx;
  height: 22rpx;
}

.line {
  width: 100%;
  height: 6rpx;
  position: absolute;
  bottom: 0rpx;
}

/*订单信息*/

.od-infor {
  margin-top: 20rpx;
  padding: 10rpx 28rpx;
  line-height: 60rpx;
  color: #666;
  background: #fff;
}

/*商品列表*/

.order-list {
  margin-top: 20rpx;
}

.order-list .item:not(:last-child) {
  margin-bottom: 20rpx;
}

.order-list .item .item-title {
  height: 82rpx;
  line-height: 80rpx;
  padding: 0 28rpx;
  background: #fff;
}

.order-list .item .item-goods {
  padding: 30rpx;
}

.order-list .item .item-goods navigator {
  padding: 28rpx 28rpx 28rpx 0;
  border-bottom: 1px solid #e5e5e5;
}

.order-list .item .item-goods navigator:last-child {
  border-bottom: 0;
}

.order-list .item .item-goods .item-goods-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.order-list .item .item-goods .twoline {
  width: 102%;
}

.order-list .item .item-goods .guige {
  line-height: 60rpx;
}

.order-list .item .item-total {
  height: 70rpx;
  line-height: 68rpx;
  padding: 0 28rpx;
  color: #666;
  background: #fff;
  text-align: right;
  border-bottom: 2rpx solid #e5e5e5;
}

.guige {
  font-size: 25rpx;
  font-weight: 400;
  color: rgba(174, 174, 174, 1);
}

/*价格信息列表*/

.od-moeny {
  padding: 10rpx 30rpx;
  line-height: 60rpx;
  background: #fff;
  color: #666;
  margin-bottom: 149rpx;
}
