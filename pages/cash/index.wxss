/* pages/cash/index.wxss */

page {
  background-color: #f5f5f5;
}

.weui-cells:after {
  border-bottom: 1rpx solid #f2f2f2;
}

.bank-num {
  margin-left: 15rpx;
}

.cash {
  background-color: #fff;
  padding: 43rpx;
}

.cash text {
  font-size: 32rpx;
  font-weight: 400;
}

.input {
  display: flex;
  align-items: flex-end;
  border-bottom: 1rpx solid #f2f2f2;
}

.input text {
  font-size: 88rpx;
  color: rgba(4, 4, 4, 1);
}

.input input {
  margin-bottom: 30rpx;
  height: 50rpx;
}

.desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.desc text {
  font-size: 24rpx;
  color: #e4592a;
}

button {
  width: 95%;
  height: 88rpx;
  background: rgba(253, 112, 64, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  text-align: center;
  margin-top: 203rpx;
}
