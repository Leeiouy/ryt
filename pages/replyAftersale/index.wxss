page {
  background-color: #f5f5f5;
}

.item {
  margin-bottom: 20rpx;
  border-top: 1rpx solid #dcdcdc;
}

.item.hide {
  display: none;
}

.item .item-title {
  height: 82rpx;
  line-height: 80rpx;
  padding: 0 28rpx;
  background: #fff;
  border-bottom: 2rpx solid #e5e5e5;
}

.item .item-goods {
  padding-left: 28rpx;
}

.item .item-goods .inner {
  padding: 28rpx 28rpx 28rpx 0;
  border-bottom: 1px solid #e5e5e5;
}

.item .item-goods .inner:last-child {
  border-bottom: 0;
}

.item .item-goods .item-goods-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.item .item-goods .oneline {
  /* height: 20px;
  line-height: 20rpx;  */
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.guigge {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(151, 151, 151, 1);
}

.item .item-total {
  height: 70rpx;
  line-height: 68rpx;
  padding: 0 28rpx;
  color: #666;
  background: #fff;
  text-align: right;
  border-bottom: 2rpx solid #e5e5e5;
}

.reason {
  margin-top: 20rpx;
  padding: 34rpx 28rpx;
  background-color: #fff;
}
.reson-price{
  font-size: 28rpx;
  color: #E4592A;
  margin-left: 25rpx;
}
.question {
  padding: 0 34rpx 34rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 250rpx;
}

.que-title {
  font-size: 28rpx;
  padding: 26rpx 0;
  border-bottom: 1rpx solid rgba(227, 227, 227, 1);
}

textarea {
  margin-top: 24rpx;
  height: 140rpx;
}

.photo {
  width: 164rpx;
  height: 164rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(220, 220, 220, 1);
}

.sub-reply{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height:120rpx;
  padding: 18rpx 0;
background:rgba(255,255,255,1);
box-shadow:0rpx -1rpx 5rpx 0px rgba(192,184,183,0.42);
}

.sub-btn{
  width:95%;
height:84rpx;
background:rgba(228,89,42,1);
border-radius:42rpx;
font-size:30rpx;
font-weight:500;
color:rgba(255,255,255,1);
line-height:84rpx;
text-align: center;
margin:0 auto;
}

/*模态框*/

.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  /* padding: 30rpx; */
  height:400rpx;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

/*动画前初始位置*/

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.coupon-title {
  width: 40%;
  display: flex;
  justify-content: center;
  margin: 20rpx auto;
}

.cou-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.cou-select image {
  width: 50rpx;
  height: 50rpx;
}

.close {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 98rpx;
  background: rgba(228, 89, 42, 1);
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 98rpx;
  text-align: center;
}
