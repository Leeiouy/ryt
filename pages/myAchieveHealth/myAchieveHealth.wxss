}

.personal {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.person-achie text {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(228, 89, 42, 1);
}

.person-achie text:nth-child(2) {
  margin-left: 40rpx;
}

.mid-line {
  width: 3rpx;
  height: 104rpx;
  background: rgba(224, 224, 224, 1);
}

.team-achie text {
  color: #333;
  font-size: 32rpx;
}

.team-achie text:nth-child(1) {
