}

.achieves {
  position: absolute;
  top: 269rpx;
  width: 100%;
}

.day-achieve {
  width: 93%;
  background-color: #fff;
  margin: 0 29rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2rpx 5rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.day-top {
  padding: 28rpx;
  color: #e4592a;
  border-bottom: 1rpx solid #e0e0e0;
}

.down {
  width: 17rpx;
