.notify {
  margin: 20rpx 0;
  background-color: white;
  height: 100rpx;
}
.notify {
  padding: 0 30rpx;
}
.notify image {
  width: 50rpx;
  margin-right: 30rpx;
}
.column {
  width: 96%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.column .column_top {
  border-radius: 20rpx;
  padding: 0 20rpx;
  padding-bottom: 30rpx;
}
.column .column_goods .column_goods_item {
  width: 32%;
}
.column .column_goods .column_goods_item .column_goods_item_price {
  color: #fa201e;
  font-size: 30rpx;
  font-weight: bold;
}
.column .column_bottom > view {
  border-radius: 20rpx;
  margin-top: 20rpx;
  padding: 0 20rpx;
  padding-bottom: 30rpx;
}
.column .column_top_title {
  padding: 20rpx 0;
}
.column .column_goods_item image {
  border-radius: 15rpx;
}
.goods {
  width: 96%;
  margin: 0 auto;
}
.goods .goods_item {
  width: 48%;
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.goods .goods_item .goods_img {
  position: relative;
}
.goods .goods_item .goods_img .goods_time {
  background-color: #fe1f23a2;
  color: white;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  text-align: center;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.goods .goods_item .goods_detail {
  padding: 15rpx;
}
.goods .goods_item .goods_detail .goods_info_icon {
  position: relative;
  top: -2rpx;
  width: 90rpx;
  height: 30rpx;
  background-color: #fa201e;
  display: inline-block;
  font-size: 18rpx;
  color: white;
  line-height: 35rpx;
  text-align: center;
  border-radius: 20rpx;
}
.goods .goods_item .goods_detail .goods_info_icon .goods_info_icon_price {
  position: relative;
  top: -1rpx;
}
.goods .goods_item .goods_detail .goods_price {
  color: #fa201e;
}
