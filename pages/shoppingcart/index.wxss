/* pages/shopcart/shopcart.wxss */

page {
  /* background: #f1f1f1; */
}

.shopcart {
  margin-top: 20rpx;
}

.shopcart .item {
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
  background: #fff;
}

/* .shopcart .item:last-child {
  border-bottom: none;
} */

.shopcart .item .item-select {
  width: 100rpx;
}

.item-information .item-image image {
  width: 184rpx;
  height: 184rpx;
}

.item-information .item-infor {
  margin-left: 20rpx;
  padding-right: 25rpx;
  margin-top: 6rpx;
}

.item-information .item-infor .item-title {
  height: 70rpx;
  line-height: 35rpx;
  font-size: 28rpx;
}

.item-information .item-infor .item-title text {
  color: #1EAB22;
}

.item-information .item-infor .item-price {
  color: #ff2808;
  font-size: 28rpx;
}

.item-information .item-infor .item-oldprice {
  width: 300rpx;
  color: #888;
}

.item-information .item-infor .item-delete {
  width: 32rpx;
  height: 33rpx;
  margin-top: 30rpx;
}

/*数量加减*/

.updown {
  border: 1px solid #e5e5e5;
  border-radius: 6rpx;
  overflow: hidden;
  height: 70rpx;
}

.updown image {
  width: 28rpx;
  height: 28rpx;
}

.updown .up, .updown .down {
  width: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.updown .up {
  border-left: 1rpx solid #e5e5e5;
}

.updown .down {
  border-right: 1rpx solid #e5e5e5;
}

.updown .nums {
  width: 80rpx;
  text-align: center;
}

/*空购物车*/

.shopcart-none .none-ico {
  display: block;
  width: 495rpx;
  height: 335rpx;
  margin: 250rpx auto 44rpx;
}

.shopcart-none .none-tip {
  color: #888;
  text-align: center;
}

.shopcart-none .none-btn {
  display: block;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #fd6732;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fd6732;
  text-align: center;
  line-height: 76rpx;
  margin: 44rpx auto;
}

/*底部结算*/

.shopcart-foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  z-index: 999;
}

.shopcart-foot .foot-select {
  padding: 0 10rpx 0 28rpx;
  height: 100%;
}

.shopcart-foot .foot-all, .shopcart-foot .foot-total {
  line-height: 100rpx;
}

.shopcart-foot .foot-total {
  text-align: right;
  padding-right: 20rpx;
  color: #ff2808;
}

.shopcart-foot .foot-sub {
  width: 200rpx;
  height: 100%;
  background: #e4592a;
  color: #fff;
}

/* iphone x */
.foot-bottom {
  height: 130rpx;
  border-bottom: 30rpx solid #fff;
}