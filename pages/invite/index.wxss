/* pages/invite/index.wxss */

page {
  max-width: 100vw;
  max-height: 100vh;
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-image: url('https://riyuetaoguoji.com/images/Intebg.png');
  background-size: 100vw 100vh;
}

.invite {
  background-image: url('https://riyuetaoguoji.com/images/qrcodebg.png');
  background-size: 100% 100%;
  width: 85%;
  height: 800rpx;
  border-radius: 20rpx;
  margin: 270rpx auto 0;
}

.top {
  font-size: 32rpx;
  color: #ff4754;
  margin-top: 100rpx;
}

.code {
  font-size: 68rpx;
  color: #ff4754;
}

.btn {
  width: 150rpx;
  height: 60rpx;
  background-color: #ff8069;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.line {
  width: 544rpx;
  height: 1rpx;
  border: 1rpx solid rgba(255, 186, 135, 1);
  margin-top: 44rpx;
  margin-bottom: 37rpx;
}

.qrcode {
  width: 241rpx;
  height: 241rpx;
  margin-bottom: 30rpx;
}

.save {
  padding: 15rpx 20rpx;
  background-color: #ff8069;
  color: #fff;
  border-radius: 10rpx;
}
