/* pages/addressAdd/addressAdd.wxss */

page {
  background: #f1f1f1;
}

.addressAdd-box {
  margin-top: 20rpx;
}

.addressAdd-box .item {
  padding: 28rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #e5e5e5;
  align-items: center;
}

.addressAdd-box .item:nth-child(4) {
  border-bottom: none;
}

.addressAdd-box .item:last-child {
  border-bottom: none;
}

.addressAdd-box .item .item-label {
  width: 170rpx;
  vertical-align: middle;
}

.addressAdd-box .item .to-ico {
  width: 12rpx;
  height: 22rpx;
}

.addressAdd-box .item .item-textarea {
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
}

.addressAdd-box .item-default {
  margin-top: 20rpx;
}

.addressAdd-box .submit-box {
  padding: 156rpx 28rpx;
}

.placeholdercolor {
  color: #808080;
}

.wxcity {
  height: 80rpx;
  padding: 0 28rpx;
  background-color: rgba(255, 255, 255, 0.88);
}

.wxcity .img {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx 0 0;
}

.wxcity .to-ico {
  width: 12rpx;
  height: 22rpx;
}

.ai_text{
  background: #ffffff;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.ai_text .info{
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
}
.ai_text textarea{
  width: 100%;
  height: 150rpx;
  padding:20rpx 0 0 20rpx;
  background: #f5f5f5;
}
.confirm{
 background: #e4592a;
 width: 100rpx;
 height: 60rpx;
 font-size: 28rpx;
 text-align: center;
 line-height: 60rpx;
 border-radius: 20rpx;

}
