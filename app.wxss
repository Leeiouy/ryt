/**app.wxss**/

@import 'assets/styles/skyvow.wxss';
@import 'assets/styles/weui.wxss';
@import 'vant-weapp/common/index.wxss';

@import 'assets/styles/main.wxss';
@import 'assets/styles/icon.wxss';
@import 'assets/styles/animation.wxss';

@import 'assets/styles/three-dots.min.wxss';

page {
  font-size: 28rpx;
  height: auto;
  min-height: auto;
}

view, navigator, text, image {
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
  /* height: auto;
  vertical-align: middle */
}

.auto {
  width: auto;
}

.fill {
  width: 100%;
  height: 100%;
}

.flex {
  display: flex;
}

.flex1 {
  flex: 1;
}

.ali-c {
  display: flex;
  align-items: center;
}

.flexc {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flexv {
  display: flex;
  flex-direction: column;
}

.jus-b {
  display: flex;
  justify-content: space-between;
}

.jus-e {
  display: flex;
  justify-content: flex-end;
}

.jus-a {
  display: flex;
  justify-content: space-around;
}

.jus-c {
  display: flex;
  justify-content: center;
}

.flex-wrap {
  display: flex;
  flex-wrap: wrap;
}

.f3 {
  font-size: 30rpx;
}

.oneline {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.twoline {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.cor-grey {
  color: #888;
}

.cor-red {
  color: #e4592a;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99;
  background: rgba(0, 0, 0, 0.5);
}

.seat-bottom {
  height: 100rpx;
}

.lay-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  max-height: 90vh;
  background: #fff;
  z-index: 100;
}

